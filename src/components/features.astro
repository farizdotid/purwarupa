---
import Link from "@components/ui/link.astro";
import { localizePath } from "astro-i18next";
// @ts-ignore
import { Icon } from "astro-icon/components";
import { t } from "i18next";

const features = [
	{
		title: "",
		description: "features.astro",
		icon: "bx:bxs-paint",
		url: "https://astro.build/",
	},
	{
		title: "",
		description: "features.alpine",
		icon: "bx:bxs-paint",
		url: "#",
	},
	{
		title: "",
		description: "features.tailwind",
		icon: "bx:bxs-paint",
		url: "#",
	},
	{
		title: "",
		description: "features.localization",
		icon: "bx:bxs-paint",
		url: "#",
	},
	{
		title: "",
		description: "features.light_dark_mode",
		icon: "bx:bxs-paint",
		url: "#",
	},
	
];
---

<div class="relative mx-auto max-w-5xl px-6 lg:px-8">
	<div class="mx-auto max-w-2xl lg:text-center">
		<p class="mt-16 text-3xl font-bold tracking-tight text-black dark:text-white sm:text-4xl">{t("features.subtitle")}</p>
		</p>
	</div>
	<div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-none">
		<dl class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-2">
			{
				features.map((item) => (
					<div class="flex flex-col">
						<dt class="flex items-center gap-x-3 text-base font-semibold leading-7 text-black dark:text-white">
							<div class="h-8 w-8 flex-none text-black dark:text-white">
								<Icon name={item.icon} size={32} />
							</div>
							{item.title}
						</dt>
						<dd class="mt-4 flex flex-auto flex-col text-2xl leading-14 text-gray-900 dark:text-gray-100">
							<p class="flex-auto">{t(item.description)}</p>
						</dd>
					</div>
				))
			}
		</dl>
	</div>

	<div class="mx-auto max-w-2xl lg:text-center">
		<p class="mt-16 text-3xl font-bold tracking-tight text-black dark:text-white sm:text-4xl">
			Harga Lelang Karya
		</p>
		
		<p class="mt-6 text-lg leading-8 text-gray-900 dark:text-gray-100">
			Nomor karya Purwa Rupa bisa dilihat di link bawah yagesya. Angka depan adalah nomor karya Anda. Contoh : <b>015_Rison</b>, maka nomor karya tersebut adalah <b>015</b>
		</p>

		<div class="mt-8">
			<a
              href="https://drive.google.com/drive/folders/1mP3mGwA2dKl27fKIbitMFJgBCUUnsOLz?usp=sharing"
              target="_blank"
              class="px-4 py-2 bg-red-800 text-white rounded hover:bg-blue-600 text-center"
              >Lihat Nomor Karya</a
            >
		</div>
	</div>

	
</div>
